<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
  <div class="bg-zinc-700 w-full min-h-screen min-w-screen">
    <div class="flex flex-col p-4">
      <nav>
        <a href="/" class="text-blue-500">Go to Home</a>
      </nav>
      <h1 class="text-2xl text-white text-center font-bold mb-4">All Users</h1>
      <div class="flex gap-4 flex-wrap">
        <% users.forEach(function(user){ %>
          <div class="flex flex-wrap bg-zinc-800 rounded-lg shadow-lg w-[180px] min-h-52 p-2">
            <div class="w-full h-36 p-2 rounded-lg mb-4">
              <img src="<%= user.image %>" alt="User Image" class="w-full h-full object-cover object-top rounded-lg">
            </div>
            <h1 class="text-white text-2xl font-bold"><%= user.name %></h1>
            <p class="text-gray-400 text-sm"><%= user.email %></p>
            <div class="flex justify-between mt-3 w-full">
              <a class="text-gray-200 text-sm" href="/edit-user/<%= user._id %>">Edit User</a>
              <a class="text-red-300 text-sm" href="/delete-user/<%= user._id %>">Delete User</a>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </div>
  </div>
</body>

</html>