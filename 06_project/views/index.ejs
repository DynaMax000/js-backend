<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Page 1</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
  <div class="main w-full min-h-screen bg-zinc-900 font-sans">
    <div class="form">
      <form action="/create" method="POST" class="flex flex-col gap-4 p-4 justify-center items-center">
        <input class="block p-3 rounded-md w-full bg-zinc-700 text-white" type="text" placeholder="Your Title"
          name="title">
        <textarea class="block p-3 rounded-md resize-none outline-none w-full bg-zinc-700 text-white"
          placeholder="Task Details.." name="details"></textarea>
        <input class="block w-1/3 p-3 rounded-md bg-blue-700 text-white justify-center flex" type="submit"
          value="Create Task">
      </form>
    </div>
    <div class="tasks p-4 grid grid-cols-3 gap-3">
      <% if (files.length > 0) { %>
        <% files.forEach(function(val) { %>
          <div class="task bg-zinc-700 text-white rounded-md p-4">
            <h1 class="text-white text-3xl font-bold mb-2">
              <%= val %>
            </h1>
            <div class="flex justify-between">
              <a href="/tasks/<%= val %>" class="text-blue-500 inline hover:underline">Read More</a>
              <a href="/edit/<%= val %>" class="text-zinc-600 inline hover:underline ml-2">Edit</a>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <p class="p-2 text-zinc-700 col-span-3">No tasks added yet...</p>
      <% } %>

    </div>
</body>

</html>